<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Phoenix/CMC SiMPLE</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>

        <!--Begin: Top-banner and Navigation-->
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Phoenix/SiMPLE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <!--Begin: Top Navigation Menu Items-->
            <div class="navbar-collapse nav">
                <!-- Link to Authentication Partial for Register/Log in-->
                @Html.Partial("_LoginPartial")
            </div>
            <!--End: Top Navigation Menu Items-->
            
        </div>
        <!--End: Top-banner and Navigation-->
        <!-- Begin: Generate View Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="container body-content">
                    <div class="row">
                        <div class="col-lg-6 col-lg-offset-3">
                            @RenderBody()
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <footer class="col-lg-12">
                            <p>&copy; @DateTime.Now.Year - CMC SiMPLE (Sampling Intelligent/Inventory Management &amp; Packaging Logistics Environment)</p>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
        <!-- End: Generate View Content -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
